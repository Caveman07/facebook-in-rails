<% comments.each do |comment| %>
<div class="comment">
    <a class="avatar">
      <%= image_tag comment.user.avatar.thumb.url %>
    </a>
    <div class="content">
      <a class="author"><%=comment.user.name %></a>
      <div class="metadata">
        <span class="date"><%= time_ago_in_words(comment.created_at) %></span>
      </div>
      <div class="text">
        <%= comment.content %>
      </div>

      <% if current_user?(comment.user) %>
          <div class="actions">
              <a class="reply"><%= link_to 'Delete', post_comment_path(comment.post.id, comment.id), method: 'delete' %></a>
          </div>
      <% end %>

    </div>
  </div>
  <% end %>
