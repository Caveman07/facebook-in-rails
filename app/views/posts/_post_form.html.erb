<%= form_for @post do |f| %>
  <%#= render 'shared/error_messages', object: f.object %>
  <div id="field">
    <%= f.text_area :body, placeholder: "Compose new post...", id: "form-text" %>
  </div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
